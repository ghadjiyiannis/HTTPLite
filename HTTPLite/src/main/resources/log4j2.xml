<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

<!-- modified from https://www.mkyong.com/logging/apache-log4j-2-tutorials/ -->

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} (%F:%L) - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.ghi.external" level="debug" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>
